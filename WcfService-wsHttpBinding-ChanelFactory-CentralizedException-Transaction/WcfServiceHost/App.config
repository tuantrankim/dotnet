<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5" />
    </startup>
  <system.serviceModel>
    <services>
      
      
      <service name="WCFService.EmployeeService" behaviorConfiguration="mexBehavior">
        
        <endpoint address="EmployeeService" binding="wsHttpBinding" contract="WCFService.IEmployeeService">
        </endpoint>
        <host>
          <baseAddresses>
            <add baseAddress="http://localhost:8080/"/>
          </baseAddresses>
        </host>
      </service>
    </services>
    
    <bindings>
      <wsHttpBinding>
        <!--configure for all wsHttpBinding-->
        <binding  transactionFlow ="True" /> 
      </wsHttpBinding>
    </bindings>
    
    <behaviors>
      <serviceBehaviors>
        <behavior name="mexBehavior">
          <serviceMetadata httpGetEnabled="true"/>
        </behavior>
      </serviceBehaviors>
    </behaviors>
    
  </system.serviceModel>
</configuration>